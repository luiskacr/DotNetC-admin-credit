@model ClienteApi.Models.LoanTypeViewModel

@{
    ViewData["Title"] = "Crear Tipo de Crédito";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (ViewBag.exito == "" | ViewBag.exito == null)
{

}
else
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <span class="aria-hidden">@Html.ViewBag.exito</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

}
@if (ViewBag.error == "" | ViewBag.error == null)
{

}
else
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <span class="aria-hidden">@Html.ViewBag.error</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

}

<div class="card-body card shadow mb-4">
    <style>
        .card-title {
            padding-bottom: 15px;
            background: #007BFF;
            color: #fff;
            padding: 16px 30px;
            min-width: 100%;
            margin: -20px -25px 10px;
            border-radius: 3px 3px 0 0;
        }
    </style>
    <div class="card-title">
        <div class="row">
            <div class="col-sm-6">
                <h2>Creacion de un Pais</h2>
            </div>
        </div>
    </div>
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-10">
                    <label class="text-dark">
                        <strong>
                            <label asp-for="LoansTypeName" class="control-label"></label>
                        </strong>
                    </label>
                        <input asp-for="LoansTypeName" class="form-control" />
                        <span asp-validation-for="LoansTypeName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mt-5">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </div>
    </form>

    <div>
        <a asp-action="Index">Volver al Listado</a>
    </div>
</div>

