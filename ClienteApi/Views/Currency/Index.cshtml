@model IEnumerable<ClienteApi.Models.CurrencyViewModel>

@{
    ViewData["Title"] = "Lista de Monedas";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (ViewBag.exito == "" | ViewBag.exito == null)
{

}
else
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <span class="aria-hidden">@Html.ViewBag.exito</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

}
@if (ViewBag.error == "" | ViewBag.error == null)
{

}
else
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <span class="aria-hidden">@Html.ViewBag.error</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

}

<div class="card-body card shadow mb-4">
    <style>
        .table-title {
            padding-bottom: 15px;
            background: #007BFF;
            color: #fff;
            padding: 16px 30px;
            min-width: 100%;
            margin: -20px -25px 10px;
            border-radius: 3px 3px 0 0;
        }

            .table-title h2 {
                margin: 5px 0 0;
                font-size: 24px;
            }

            .table-title .btn-group {
                float: right;
            }

            .table-title .btn {
                float: right;
                font-size: 13px;
                border: none;
                min-width: 50px;
                border-radius: 2px;
                border: none;
                outline: none !important;
                margin-left: 10px;
            }
    </style>

    <div class="table-title">
        <div class="row">
            <div class="col-sm-6">
                <h2>Lista de Tipos de Monedas</h2>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-dark btn-lg" asp-action="Create">Crear Moneda</a>
            </div>
        </div>
    </div>

    <div class="table-responsive table-hover">
        <table id="TableEmployee" class="table table-avance table-striped " cellspacing="0" width="100%">
            <thead class="table-primaryk">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.IdCurrencies)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CurrencyName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CurrencyIso)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Symbol)
                    </th>
                    <th>
                        Opciones
                    </th>
                </tr>
            </thead>
            <tbody class=" ">
                @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdCurrencies)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CurrencyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CurrencyIso)
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.Symbol)
                    </td>
                    <td>
                            @Html.ActionLink("Edit", "Edit", new { id=item.IdCurrencies } , new { @class = "btn btn-primary " })
                            @Html.ActionLink("Details", "Details", new {  id=item.IdCurrencies  }, new { @class = "btn btn-success " })
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>

</div>