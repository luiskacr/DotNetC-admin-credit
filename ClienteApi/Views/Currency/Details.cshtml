@model ClienteApi.Models.CurrencyViewModel

@{
    ViewData["Title"] = "Detalles de Moneda";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (ViewBag.exito == "" | ViewBag.exito == null)
{

}
else
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <span class="aria-hidden">@Html.ViewBag.exito</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

}
@if (ViewBag.error == "" | ViewBag.error == null)
{

}
else
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <span class="aria-hidden">@Html.ViewBag.error</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

}

<div class="card-body card shadow mb-4">
    <style>
        .card-title {
            padding-bottom: 15px;
            background: #007BFF;
            color: #fff;
            padding: 16px 30px;
            min-width: 100%;
            margin: -20px -25px 10px;
            border-radius: 3px 3px 0 0;
        }
    </style>
    <div class="card-title">
        <div class="row">
            <div class="col-sm-6">
                <h2>Detalles de la Moneda</h2>
            </div>
        </div>
    </div>
    <div class="form-horizontal">
        <div class="col-md-10 mt-3">
            <label class="text-dark">
                <strong>
                    @Html.DisplayNameFor(model => model.IdCurrencies)
                </strong>
            </label>
            <input disabled class="form-control" id="colFormLabel" placeholder="@Html.DisplayFor(model => model.IdCurrencies)">
        </div>

        <div class="col-md-10 mt-3">
            <label class="text-dark">
                <strong>
                    @Html.DisplayNameFor(model => model.CurrencyName)
                </strong>
            </label>
            <input disabled class="form-control" id="colFormLabel" placeholder="@Html.DisplayFor(model => model.CurrencyName)">
        </div>

        <div class="col-md-10 mt-3">
            <label class="text-dark">
                <strong>
                    @Html.DisplayNameFor(model => model.CurrencyIso)
                </strong>
            </label>
            <input disabled class="form-control" id="colFormLabel" placeholder="@Html.DisplayFor(model => model.CurrencyIso)">
        </div>

        <div class="col-md-10 mt-3">
            <label class="text-dark">
                <strong>
                    @Html.DisplayNameFor(model => model.Symbol)
                </strong>
            </label>
            <input disabled class="form-control" id="colFormLabel" placeholder="@Html.DisplayFor(model => model.Symbol)">
        </div>

        <div class="form-group mt-5">
            @Html.ActionLink("Editar", "Edit", new {  id = Model.IdCurrencies } , new { @class = "btn btn-warning" })
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Eliminar
            </button>
        </div>
        <div class="col-md-10 mt-3">
            <a asp-action="Index">Volver a la lista</a>
        </div>

    </div>

</div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    <i class="fas fa-exclamation-triangle" style="color:red;"></i>
                    Advertencia
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Esta Seguro que desea Eliminar el Pais @Html.DisplayFor(model => model.CurrencyName) ?
            </div>
            <div class="modal-footer">

                <form asp-action="Delete">
                    <input asp-for="IdCurrencies" class="form-control" type="hidden" />

                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>
