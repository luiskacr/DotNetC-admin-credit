<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!--FontAsesome-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css"/>
    <script src="~/vendor/fontawesome-free/js/all.js" crossorigin="anonymous"></script>
    <!-- Boostrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <!-- DataTable -->
    <link href="~/vendor/Datatable/datatables.min.css" rel="stylesheet" type="text/css" />
    <link href="~/vendor/Datatable/DataTables-1.11.5/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/boostrap/sb-admin-2.min.css" asp-append-version="true" />
    <!-- jQuery-->
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <!--Boostrap DatePicker-->
    <link href="~/vendor/DatePicker/bootstrap-datepicker3.min.css" rel="stylesheet" />
    <script src="~/vendor/DatePicker/moment.min.js"></script>
    <script src="~/vendor/DatePicker/bootstrap-datepicker.min.js"></script>

</head >
<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">
        <style>
            .bg-gradient-primary{
                background: #007BFF !important;
            }
            .sidebar-divider{
                background: white !important;
            }
        </style>
        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" asp-area="" asp-controller="Dashboard" asp-action="index">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-landmark"></i>
                </div>
                <div class="sidebar-brand-text mx-3">Fide-Creditos</div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Dashboard" asp-action="index">
                    <i class="fa fa-chart-pie"></i>
                    <span>Inicio</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                Creditos
            </div>

            <!-- Credits -->
            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-toggle="collapse" data-bs-target="#home-collapse" aria-expanded="false">
                    <i class="fas fa-money-bill"></i>
                    <span>Creditos</span>
                </a>
                <div class="collapse" id="home-collapse" style="">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Custom Components:</h6>
                        <a class="collapse-item" href="buttons.html">Buttons</a>
                    </div>
                </div>
            </li>

            <hr class="sidebar-divider">

            <!-- Options -->
            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-toggle="collapse" data-bs-target="#opciones-collapse" aria-expanded="false">
                    <i class="fas fa-fw fa-cog"></i>
                    <span>Configuracion</span>
                </a>
                <div class="collapse" id="opciones-collapse" style="">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Configuraciones:</h6>
                        <a class="collapse-item" asp-area="" asp-controller="Country" asp-action="index">Paices</a>
                        <a class="collapse-item" asp-area="" asp-controller="State" asp-action="index">Privincias</a>
                        <a class="collapse-item" asp-area="" asp-controller="Currency" asp-action="index">Monedas</a>
                    </div>
                </div>
            </li>

        </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>


                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">
                            <!-- Dropdown - Messages -->
                            <div class="dropdown-menu dropdown-menu-right p-3 shadow animated--grow-in" aria-labelledby="searchDropdown">
                                <form class="form-inline mr-auto w-100 navbar-search">
                                    <div class="input-group">
                                        <input type="text" class="form-control bg-light border-0 small"placeholder="Search for..." aria-label="Search"
                                            aria-describedby="basic-addon2">
                                        <div class="input-group-append">
                                            <button class="btn btn-primary" type="button">
                                                <i class="fas fa-search fa-sm"></i>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>

                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small">Douglas McGee</span>
                                @if (ViewBag.image == null) 
                                {
                                    <img class="img-profile rounded-circle" src="/img/user.png">
                                }else{
                                    <img class="img-profile rounded-circle" >
                                }
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink">
                                <li><a class="dropdown-item" href="#">My Perfil</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">Salir</a></li>
                            </ul>
                        </li>

                    </ul>

                </nav>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">
                    @RenderBody()
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container text-center">
                       © @DateTime.Now.Day/@DateTime.Now.Month/@DateTime.Now.Year -
                <a class="text-black" href="https://ufidelitas.ac.cr/">Fidelitas Programacion Avanzada</a>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Bootstrap JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <!-- Custom JS-->
    <script src="~/js/sb-admin-2.min.js"></script>
    <!-- DataTable-->
    <script src="~/vendor/Datatable/datatables.min.js"></script>
    <script src="~/js/mainTables.js"></script>


</body>
</html>
