@model ClienteApi.Models.CustomerViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    List<SelectListItem> contentData = new List<SelectListItem>();
    foreach (var item in ViewBag.States)
    {
        int id = item.IdCountry;
        String CountryName = "";    
        foreach (var item2 in ViewBag.Country)
        {
            if (item.IdCountry == item2.IdCountry) 
            {
                CountryName = item2.CountryName;
            }
        }

        contentData.Add(new SelectListItem{
                    Text = CountryName + " | " + item.StateName,
                    Value = item.IdState.ToString()
        });
    }
}

@if (ViewBag.exito == "" | ViewBag.exito == null)
{

}
else
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <span class="aria-hidden">@Html.ViewBag.exito</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

}
@if (ViewBag.error == "" | ViewBag.error == null)
{

}
else
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <span class="aria-hidden">@Html.ViewBag.error</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

}

<div class="card-body card shadow mb-4">
    <style>
        .card-title {
            padding-bottom: 15px;
            background: #007BFF;
            color: #fff;
            padding: 16px 30px;
            min-width: 100%;
            margin: -20px -25px 10px;
            border-radius: 3px 3px 0 0;
        }
    </style>
    <div class="card-title">
        <div class="row">
            <div class="col-sm-6">
                <h2>Creacion de un tipo de Moneda</h2>
            </div>
        </div>
    </div>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-horizontal">
            <div class="form-group">

                <div class="row">

                    <div class="col-md-5 mt-3">
                        <label class="text-dark">
                            <span>
                                <label asp-for="FirstName" class="control-label"></label>
                            </span>
                        </label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="col-md-5 mt-3">
                        <label class="text-dark">
                            <span>
                                <label asp-for="LastName" class="control-label"></label>
                            </span>
                        </label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                </div>

                <div class="row">

                    <div class="col-md-5 mt-3">
                        <label class="text-dark">
                            <span>
                                <label asp-for="DocumentId" class="control-label"></label>
                            </span>
                        </label>
                        <input asp-for="DocumentId" class="form-control" />
                        <span asp-validation-for="DocumentId" class="text-danger"></span>
                    </div>

                    <div class="col-md-5 mt-3">
                        <label class="text-dark">
                            <span>
                                <label asp-for="BirthDate" class="control-label"></label>
                            </span>
                        </label>
                        <!--
                        <input asp-for="BirthDate" class="form-control custom-datepicker" />
                        -->
                        <input asp-for="BirthDate" type="text" class="form-control custom-datepicker">
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>

                </div>

                <div class="row">

                    <div class="col-md-5 mt-3">
                        <label class="text-dark">
                            <span>
                                <label asp-for="Email" class="control-label"></label>
                            </span>
                        </label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="col-md-5 mt-3">
                        <label class="text-dark">
                            <span>
                                <label asp-for="Telephone" class="control-label"></label>
                            </span>
                        </label>
                        <input asp-for="Telephone" class="form-control" />
                        <span asp-validation-for="Telephone" class="text-danger"></span>
                    </div>


                </div>

                <div class="row">

                    <div class="col-md-10 mt-3">
                        <label class="text-dark">
                            <span>
                                <label asp-for="IdState" class="control-label"></label>
                            </span>
                        </label>
                        <select class="form-select" id="IdState" asp-for="IdState" asp-items="@contentData">
                            <option selected>Seleccione la Provincia</option>
                        </select>
                        <span asp-validation-for="IdState" class="text-danger"></span>
                    </div>

                </div>

                <div class="row">

                    <div class="col-md-10 mt-3">
                        <label class="text-dark">
                            <span>
                                <label asp-for="UserAddress" class="control-label"></label>
                            </span>
                        </label>
                        <input asp-for="UserAddress" class="form-control" />
                        <span asp-validation-for="UserAddress" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group mt-5">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>

            </div>
        </div>
    </form>
    <div>
        <a asp-action="Index">Volver al Listado</a>
    </div>

</div>
