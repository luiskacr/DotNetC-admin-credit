@model ClienteApi.Models.CustomerViewModel

@{
    ViewData["Title"] = "Editar Cliente";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    List<SelectListItem> contentData = new List<SelectListItem>();
    int idStateSelected = Model.IdState;

    foreach (var item in ViewBag.States)
    {
        int id = item.IdCountry;
        String CountryName = "";
        foreach (var item2 in ViewBag.Country)
        {
            if (item.IdCountry == item2.IdCountry)
            {
                CountryName = item2.CountryName;
            }
        }
        if (idStateSelected == item.IdState) {
            contentData.Add(new SelectListItem
                    {
                        Selected = true,
                        Text = CountryName + " | " + item.StateName,
                        Value = item.IdState.ToString()
                    });
        }

        contentData.Add(new SelectListItem
                {
                    Text = CountryName + " | " + item.StateName,
                    Value = item.IdState.ToString()
                });
    }
}

@if (ViewBag.exito == "" | ViewBag.exito == null)
{

}
else
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <span class="aria-hidden">@Html.ViewBag.exito</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

}
@if (ViewBag.error == "" | ViewBag.error == null)
{

}
else
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <span class="aria-hidden">@Html.ViewBag.error</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

}


<div class="card-body card shadow mb-4">
    <style>
        .card-title {
            padding-bottom: 15px;
            background: #007BFF;
            color: #fff;
            padding: 16px 30px;
            min-width: 100%;
            margin: -20px -25px 10px;
            border-radius: 3px 3px 0 0;
        }
    </style>
    <div class="card-title">
        <div class="row">
            <div class="col-sm-6">
                <h2>Editar Cliente</h2>
            </div>
        </div>
    </div>

    <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input asp-for="IdCustomers" class="form-control"  hidden/>

        <div class="row">

            <div class="col-md-5 mt-3">
                <label class="text-dark">
                    <strong>
                        <label asp-for="FirstName" class="control-label"></label>
                    </strong>
                </label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="col-md-5 mt-3">
                <label class="text-dark">
                    <strong>
                        <label asp-for="LastName" class="control-label"></label>
                    </strong>
                </label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

        </div>

        <div class="row">

            <div class="col-md-5 mt-3">
                <label class="text-dark">
                    <strong>
                        <label asp-for="DocumentId" class="control-label"></label>
                    </strong>
                </label>
                <input asp-for="DocumentId" class="form-control" />
                <span asp-validation-for="DocumentId" class="text-danger"></span>
            </div>
             
            <div class="col-md-5 mt-3">
                <label class="text-dark">
                    <strong>
                        <label asp-for="BirthDate" class="control-label"></label>
                    </strong>
                </label>
                <input asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>

        </div>

        <div class="row">

            <div class="col-md-5 mt-3">
                <label class="text-dark">
                    <strong>
                        <label asp-for="Email" class="control-label"></label>
                    </strong>
                </label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-md-5 mt-3">
                <label class="text-dark">
                    <strong>
                        <label asp-for="Telephone" class="control-label"></label>
                    </strong>
                </label>
                <input asp-for="Telephone" class="form-control" />
                <span asp-validation-for="Telephone" class="text-danger"></span>
            </div>

        </div>

        <div class="row">

            <div class="col-md-10 mt-3">
                <label class="text-dark">
                    <strong>
                        <label asp-for="IdState" class="control-label"></label>
                    </strong>
                </label>
                <select class="form-select" id="IdState" asp-for="IdState" asp-items="@contentData"></select>
                <span asp-validation-for="IdState" class="text-danger"></span>
            </div>

        </div>

        <div class="row">

            <div class="col-md-10 mt-3">
                <label class="text-dark">
                    <strong>
                        <label asp-for="UserAddress" class="control-label"></label>
                    </strong>
                </label>
                <textarea asp-for="UserAddress" class="form-control"></textarea>
                <span asp-validation-for="UserAddress" class="text-danger"></span>
            </div>

        </div>

        <div class="form-group mt-5">
            <input type="submit" value="Guardar" class="btn btn-primary" />
        </div>

    </form>

    <div>
        <a asp-action="Index">Volver a la Lista</a>
    </div>

</div>
